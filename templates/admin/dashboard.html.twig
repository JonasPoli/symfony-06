{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Bem-vindo à Administração{% endblock %}

{% block main %}

<div class="row">
    <div class="col-6">
        <h3>Últimas Notícias</h3>
        <ol>
            {% for new in lastNews %}
                <li>
                    <a href="{{ path('app_home_newsdetail', {'slug': new.slug}) }}">{{ new.title }}</a>
                    <br>- {{ new.createdAt|date('d/m/Y H:i') }}
                </li>
            {% endfor %}
        </ol>
    </div>

    <div class="col-6">
        <h3>Categorias mais usadas</h3>
        <ol>
            {% for cat in bestCat %}
                <li>
                    <a href="{{ path('app_category_list', {'slug': cat.title}) }}">({{ cat.qtd }}) - {{ cat.title }}</a>
                </li>
            {% endfor %}
        </ol>
    </div>
</div>


{% endblock %}