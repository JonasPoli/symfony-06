{% extends 'base.html.twig' %}
{% block title %}{{ pageTitle }}{% endblock %}
{% block body %}

    <!--Section: News of the day-->
    <main class="container">

        <section id="section-introduction">
            <!-- Main title -->
            <h2 class="h1 fw-bold">{{ search }}

            </h2>

            <!-- Seo title -->
            <h1 class="h6">Pesquisando por {{ search }}
            </h1>


        </section>
<hr>
        {% if pager.nbResults is defined and  pager.nbResults == 0 %}
            NÃ£o encontramos nenhum resultado<br><br>
        {% else %}
            Foram encontramos <strong>{{ pager.nbResults }}</strong> resultado<br><br>
        {% endif %}
        <turbo-frame  id="browse-list-{{ pager.currentPage }}" >
            {% for new in pager %}
        <div class="row gx-5">
            <div class="col-md-4 mb-4">
                <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
                    <img src="{{ asset('uploads/images/') }}{{ new.image }}" class="img-fluid" />
                    <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                    </a>
                </div>
            </div>

            <div class="col-md-8 mb-8">
                <a href="{{ path('app_category_list',{'slug':new.category.title}) }}" class="text-white badge bg-danger px-2 py-1 shadow-1-strong mb-3">{{ new.category.title }}</a>
                <p class="text-muted small">{{ new.createdAt|date('d/m/Y H:i') }} - {{ new.createdAt|ago()}}</p>
                <h4><strong>{{ new.title }}</strong></h4>
                <p class="text-muted">
                    {% if new.description|length > 300 %}
                        {{ new.description|slice(0, 300)|raw }}...
                    {% else %}
                        new.description|raw
                    {% endif %}
                </p>
                <a href="{{ path('app_home_newsdetail',{'slug':new.slug}) }}" type="button" class="btn btn-primary">Leia Mais</a>
            </div>
        </div>
                <hr>
            {% endfor %}
            {% if pager.hasNextPage %}
                <turbo-frame id="browse-list-{{ pager.nextPage }}" src="{{ pagerfanta_page_url(pager, pager.nextPage) }}" loading="lazy"></turbo-frame>
            {% endif %}
        </turbo-frame>



    </main>



